chattr -i /etc/grub.d
chattr -i /etc/passwd
chattr -i /etc/shadow
chattr -i /etc/securetty
chattr -i /root
chattr -i /boot/grub/grub.cfg
chattr -i /etc/cron.allow
chattr -i /etc/apache2/conf* >/dev/null 2>&1
chattr -i /usr/sbin/apache2 >/dev/null 2>&1
chattr -i /var/log/apache2/ >/dev/null 2>&1
chattr -i /etc/apache2/conf-available/* >/dev/null 2>&1
chattr -i /etc/apache2/conf-enabled/* >/dev/null 2>&1
chattr -i /etc/apache2/apache2.conf >/dev/null 2>&1
chown root:root /etc/passwd
chattr -i /etc/passwd
chown root:root /etc/group
chattr -i /etc/group
chown root:shadow /etc/gshadow
chown root:root /etc/passwd-
chattr -i /etc/passwd-
chown root:root /etc/shadow-
chattr -i etc/shadow-
chown root:root /etc/group-
chattr -i /etc/group-
chown root:root /etc/gshadow-
chattr -i /etc/gshadow-
